<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стили для цвета тулбара-->
    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <!--Все стили для main-->

    <style name="BottomNavText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!--Стили для title на всех фрагментах-->

    <style name="fragment_title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!--Все стили для search-->

    <style name="search_bar" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/search_title</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:drawablePadding">@dimen/dp_16</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:paddingStart">@dimen/dp_13</item>
        <item name="android:background">@drawable/search_bar</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusedByDefault">true</item>
    </style>

    <!--Стиль для кнопки обновить в search -->

    <style name="SearchButtonUpdateStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>
    </style>

    <!--Стиль для кнопки очистить в search -->

    <style name="SearchButtonClearHistoryStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_24</item>

    </style>
    <!--Все стили для player-->

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayerTextLeft" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="PlayerTextRight" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>



    <!--Все стили для истории поиска-->

    <style name="SearchTextStyleView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textFontWeight">400</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <!--Все стили для медиатеки-->

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

    <style name="PlaceholderTextTabLay" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Все стили для settings-->

    <style name="setting_layout_switch"> <!-- Стиль для switch на экране настройки -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="setting_layout_items"> <!-- Сроки /кнопки -->
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="setting_layout_items_text"> <!-- Стиль для текстов на экране настройки -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="settings_layout_image"> <!-- Стиль для картинок на экране настройки -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_22</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="new_playlist_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@drawable/edittext_with_stroke</item>
    </style>

    <style name="new_playlist_text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>



