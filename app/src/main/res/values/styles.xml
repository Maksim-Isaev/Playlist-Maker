<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ________________________________Стили для Activity_main________________________________ -->

    <style name="main_Layout_Button_Style" parent="Widget.MaterialComponents.Button.UnelevatedButton"> <!-- Стиль для кнопок главного экрана -->
        <item name="iconPadding">@dimen/Int_Butt_main</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/Rad_Butt_main</item>
    </style>

    <style name="main_Layout_TextToolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"> <!-- Стиль для текста тулбара главного экрана -->
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <!-- ______________________________Стили для Activity_settings______________________________ -->
    <style name="setting_Layout_switch"> <!-- Стиль для switch на экране настройки -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="setting_Layout_Items"> <!-- Сроки /кнопки -->
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="setting_Layout_Items_Text"> <!-- Стиль для текстов на экране настройки -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="settings_Layout_Image"> <!-- Стиль для картинок на экране настройки -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <!-- _________________________Стили для цвета тулбара_____________________________________ -->
    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
    <!-- __________________Стили для тулбара на всех activity кроме main________________________ -->
    <style name="toolbar_Dimensions" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"> <!-- Стиль для тулбара -->
        <item name="navigationIcon">@drawable/ic_left_arrow</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <!-- _______________________________Стили для Work in progress______________________________ -->
    <style name="work_In_Progress_Image"> <!-- Стиль для картинки заглушки -->
        <item name="android:orientation">vertical</item>
        <item name="android:src">@drawable/work_in_progress</item>
    </style>

    <style name="work_In_Progress_Text"> <!-- Стиль для текста заглушки -->
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/Padding_20</item>
        <item name="android:text">@string/TBD</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_22</item>
    </style>


    <style name="search_bar" parent="ThemeOverlay.Material3.TextInputEditText">

        <item name="android:maxLines">1</item>
        <item name="android:hint">@string/search_title</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="android:drawablePadding">@dimen/search_bar_padding_horizontal</item>
        <item name="android:padding">@dimen/search_bar_padding_vertical</item>
        <item name="android:background">@drawable/search_bar</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusedByDefault">true</item>
    </style>
</resources>



