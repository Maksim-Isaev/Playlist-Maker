<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar_dimensions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/search"
        app:titleTextColor="?attr/colorOnPrimary" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/search_bar"
            style="@style/search_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_36dp"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:layout_marginVertical="@dimen/padding_8dp"
            android:autofillHints=""
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/cancel_button"
            android:layout_width="@dimen/padding_16dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/end_30dp"
            android:contentDescription="@string/clear_text"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cancel"
            android:visibility="gone"
            app:tint="?attr/colorOnSecondary" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/music_search_item"
        tools:listitem="@layout/activity_music_search_item">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placeholderImage"
            android:layout_width="@dimen/err_pic_size"
            android:layout_height="@dimen/err_pic_size"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/nothing"
            android:layout_marginTop="@dimen/top_120"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/placeholderMessage"
            android:layout_width="@dimen/weight_312dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="19sp"
            tools:text="@string/connect_error"
            android:textStyle="normal"
            android:fontFamily="@font/ys_display_medium" />

        <Button
            android:id="@+id/updateResponse"
            style="@style/SearchButtonUpdateStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:textColor="?attr/colorPrimary" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="@string/history_title"
            android:gravity="center"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/text_19"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorOnPrimary"
            android:layout_marginTop="@dimen/extra_padding" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_history_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_8dp"
            android:layout_weight="1"
            tools:listitem="@layout/activity_music_search_item">

        </androidx.recyclerview.widget.RecyclerView>

       <Button
            android:id="@+id/clear_history"
            style="@style/SearchButtonClearHistoryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_history" />
    </LinearLayout>
</LinearLayout>

