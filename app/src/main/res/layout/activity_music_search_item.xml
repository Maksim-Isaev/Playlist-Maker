<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/albumImage"
        android:layout_width="@dimen/music_image_size"
        android:layout_height="@dimen/music_image_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/padding_12dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_snake" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            style="@style/SearchTextStyleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_14dp"
            android:gravity="start|center_vertical"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_16"
            tools:text="No Reply" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_1"
            android:layout_marginBottom="@dimen/padding_14dp"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                style="@style/SearchTextStyleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/text_11"
                tools:text="The Beatles" />

            <TextView
                android:id="@+id/text_spacer"
                style="@style/SearchTextStyleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_separator"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/text_11" />

            <TextView
                android:id="@+id/track_time"
                style="@style/SearchTextStyleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/text_11"
                tools:text="5:12" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/big_icon_size"
        android:layout_height="@dimen/big_icon_size"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/padding_8dp"
        android:layout_marginEnd="@dimen/end_12dp"
        android:backgroundTint="?attr/colorSecondaryVariant"
        app:srcCompat="@drawable/ic_forward_arrow" />


</LinearLayout>